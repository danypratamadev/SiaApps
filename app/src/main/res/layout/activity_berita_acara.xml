<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".dosen.BeritaAcaraActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Berita Acara"
            app:titleCentered="true" />

    </com.google.android.material.appbar.AppBarLayout>

    <EditText
        android:id="@+id/isiBerita"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:hint="Tuliskan Berita Acara disini"
        android:layout_margin="16dp"
        android:gravity="top|start"
        android:inputType="textCapSentences"
        android:background="@drawable/back_spinner"
        android:padding="16dp"/>

    <Button
        android:id="@+id/simpanBerita"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Simpan Berita Acara"
        android:layout_margin="16dp"/>

</LinearLayout>
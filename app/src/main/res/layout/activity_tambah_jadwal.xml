<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".admin.TambahJadwalActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Tambah Jadwal Baru"
            app:titleCentered="true" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/back_white_round"
                android:padding="20dp"
                android:layout_margin="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mata Kuliah"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back_spinner"
                    android:layout_marginTop="8dp">

                    <Spinner
                        android:id="@+id/spinMk"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:spinnerMode="dropdown"
                        android:backgroundTint="@color/purple_500"
                        android:overlapAnchor="false"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dosen Pengampu"
                    android:layout_marginTop="24dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back_spinner"
                    android:layout_marginTop="8dp">

                    <Spinner
                        android:id="@+id/spinDosen"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:spinnerMode="dropdown"
                        android:backgroundTint="@color/purple_500"
                        android:overlapAnchor="false"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hari"
                    android:layout_marginTop="24dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back_spinner"
                    android:layout_marginTop="8dp">

                    <Spinner
                        android:id="@+id/spinHari"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:spinnerMode="dropdown"
                        android:backgroundTint="@color/purple_500"
                        android:overlapAnchor="false"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jam"
                    android:layout_marginTop="24dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back_spinner"
                    android:layout_marginTop="8dp">

                    <Spinner
                        android:id="@+id/spinJam"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:spinnerMode="dropdown"
                        android:backgroundTint="@color/purple_500"
                        android:overlapAnchor="false"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ruangan"
                    android:layout_marginTop="24dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back_spinner"
                    android:layout_marginTop="8dp">

                    <Spinner
                        android:id="@+id/spinRuangan"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:spinnerMode="dropdown"
                        android:backgroundTint="@color/purple_500"
                        android:overlapAnchor="false"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kuota Mahasiswa"
                    android:layout_marginTop="24dp"/>

                <EditText
                    android:id="@+id/kuotaKelas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Kuota Mahasiswa"
                    android:inputType="numberDecimal"
                    android:background="@drawable/back_spinner"
                    android:padding="16dp"
                    android:maxLength="2"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tarif per SKS"
                    android:layout_marginTop="24dp"/>

                <EditText
                    android:id="@+id/tarifKelas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tarif per SKS"
                    android:inputType="numberDecimal"
                    android:background="@drawable/back_spinner"
                    android:padding="16dp"
                    android:maxLength="6"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

            <Button
                android:id="@+id/simpanJadwal"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:text="Simpan Jadwal"
                android:layout_marginTop="42dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="200dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>